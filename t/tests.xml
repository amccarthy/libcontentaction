<?xml version="1.0" encoding="ISO-8859-1"?>
<testdefinition version="1.0">
  <suite name="libcontentaction-tests">
    <set name="libcontentaction" description="Tests for libcontentaction">
      <pre_steps>
	<step expected_result="0">
	  echo "[General]" > /home/user/.config/tracker/tracker-store.cfg; \
	  echo "Verbosity=3" >> /home/user/.config/tracker/tracker-store.cfg; \
	  echo "LowMemoryMode=false" >> /home/user/.config/tracker/tracker-store.cfg; \
          lca-cita-test sandbox.sh --start
        </step>
      </pre_steps>

      <case name="lca-cita-test-fail">
        <step expected_result="1">
          lca-cita-test false
        </step>
      </case>

      <case name="test-actions">
        <step expected_result="0">
          lca-cita-test test-actions.sh
        </step>
      </case>
      <case name="test-mimetypes">
        <step expected_result="0">
          lca-cita-test test-mimetypes.sh
        </step>
      </case>
      <case name="test-invoking">
        <step expected_result="0">
          lca-cita-test test-invoking.py
        </step>
      </case>
      <case name="test-defaults">
        <step expected_result="0">
          lca-cita-test test-defaults.py
        </step>
      </case>
      <case name="test-servicefw-signals">
        <step expected_result="0">
          lca-cita-test test-servicefw-signals.py
        </step>
      </case>
      <case name="test-mimes">
        <step expected_result="0">
          lca-cita-test test-mimes.py
        </step>
      </case>
      <case name="test-desktop-launching">
        <step expected_result="0">
          lca-cita-test test-desktop-launching.py
        </step>
      </case>
      <case name="test-l10n">
        <step expected_result="0">
          lca-cita-test test-l10n.sh
        </step>
      </case>
      <case name="test-fixedparams">
        <step expected_result="0">
          lca-cita-test test-fixed-params.py
        </step>
      </case>
      <case name="test-schemes">
        <step expected_result="0">
          lca-cita-test test-schemes.sh
        </step>
      </case>
      <case name="test-special-chars">
        <step expected_result="0">
          lca-cita-test test-special-chars.py
        </step>
      </case>
      <case name="test-regexps">
        <step expected_result="0">
          lca-cita-test test-regexps.py
        </step>
      </case>

      <environments>
        <scratchbox>true</scratchbox>
        <hardware>true</hardware>
      </environments>

      <get>
	<file>/tmp/lca-sandbox-start.log</file>
	<file>/home/user/.local/share/tracker/tracker-store.log</file>
      </get>

      <post_steps>
        <step expected_result="0">
          lca-cita-test ./sandbox.sh --stop
        </step>
      </post_steps>
    </set>
  </suite>
</testdefinition>
